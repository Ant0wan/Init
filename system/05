# Log as root
#	su

# Get full SSH service status 
#	service ssh status 

# Get SSH service status (run, stop, etc.)
	SSH_STATUS=$(service ssh status | grep -i "Active" | xargs echo | cut -c 9-)
	echo "\033[92mSSH Service Status: $SSH_STATUS \033[0m"
