# Log as root
#	su

# Get full SSH service status 
#	service ssh status 

# Get SSH service status (run, stop, etc.)
	service ssh status 2> dd.tmp | grep -i "Active" | xargs echo | cut -c 9-
	if [[ $dd.tmp == "" ]]; then
		echo "\033[92mSSH service status: \033[0m$SSH_STATUS"
	else
		echo "\033[31mSSH service status unknown\033[0m"
	fi
	rm -f dd.tmp
